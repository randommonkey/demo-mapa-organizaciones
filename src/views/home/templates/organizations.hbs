<div class="text-right">
  <span class="close">x</span>
</div>
<h1 class="section-title">{{department}}</h1>
<div class="section-separator">
  <h4 class="section-subtitle">Organizaciones</h4>
</div>
<ul class="organizations">
  {{#each organizations}}
    <li><a href="" data-organization={{uid}} class="organization-profile-anchor">{{name}}</a></li>
  {{/each}}
</ul>
{{#if stories}}
  <h4 class="section-subtitle">Historias</h4>
  <ul class="stories">
    {{#each stories}}
      <li><a href="">{{title}}</a></li>
    {{/each}}
  </ul>
{{/if}}
{{#if keywords}}
  <h4 class="section-subtitle">Palabras clave</h4>
  <div class="keywords Row wrap">
    {{#each keywords}}
      <p>{{this}}</p>
    {{/each}}
  </div>
{{/if}}